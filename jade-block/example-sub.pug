extends ../jade-block/forsubpage
include ../jade-block/mixin-use

block headExtend
    //额外需要的head
block jsExtend
    //额外需要的js
block page-id
    //文章的page-id
    #page-id 0
block tittle
    //文章的title
    h4 follow me
block publishTime
    //文章的发表日期
    span 2016/8/20
block lastTime
    //文章的最后修改日期
    span 2016/8/20
block content
        //文章的内容
                1.专门的用于a标签的写法
                .for-a
                    span.for-emphasis
                    a(href="")

                2.段落的写法
                p

                3.强调部分的写法，加入class="for-emphasis"
                em.for-emphasis

                4.专门显示代码的写法
                .for-code
                    code
                        this.sunrise=data.retData.sunrise;//日出时间
                        br
                        this.sunset=data.retData.sunset;//日落时间

                5.专门显示图片的写法，需在标签里声明宽和高
                .for-img-show
                    img(src='',style='')
                    .img-msg
                        p

                6.文章的子标题的写法
                +subtitleuse("")

                7.文章文字p中如果有需要强调的
                p 一
                    em.strongword 二
                    |三

                8.警告和特别提醒部分
                +warnuse(leixing,b)

                9.表格的使用
                .for-table
                    table(border="1")
                        caption 这里写表单的标题
                        colgroup
                            col(style="width: 20%;")
                            col(style="width: 80%;")
                        thead
                            +tableuse("","")
                        tbody
                            +tableuse("","")
                        tfoot
                            +tableuse("","")
                10.列表的使用
                    dl
                        +dtdduse("","")

