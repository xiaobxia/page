                +tableuse("分类","举例")
            tbody
                +tableuse("(1)头部:header","标志:logo 导航:nav 主导航:mainnav 子导航:subnav 搜索:search 用户:user 登陆:login 注册:regsiter")
                +tableuse("(2)主体:main","内容:content 标题:title 文章列表:list 摘要:summary 菜单:menu 栏目:column 指南:guild 服务:service 热点:hot 新闻:news")
                +tableuse("(3)脚本footer","合作伙伴:partner 信息:info 友情链接:link 版权:copyright 加入:joinus 作者:author")
                +tableuse("(4)其他导航","标签页:tab 分页:pagination 顶导航:topnav 边导航:sidebar 左导航:leftsidebar 右导航:rightsidebar")
                +tableuse("(5)状态","block状态:is-block 当前的:current")
