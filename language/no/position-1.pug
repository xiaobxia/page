extends ../../jade-block/forsubpage
include ../../jade-block/mixin-use

block headExtend
    //额外需要的head
block jsExtend
    //额外需要的js
block page-id
    //文章的page-id
    #page-id 3
block tittle
    //文章的title
    h1 元素定位的研究
block publishTime
    //文章的发表日期
    span 2016/8/20
block lastTime
    //文章的最后修改日期
    span 2016/8/20
block commentblock
    .ds-thread(data-thread-key="1" data-title="Display属性的一些见解" data-url="http://xiaobxia.win/language/display-1.html")

block content
    //文章的内容
            1.专门的用于a标签的写法
            .for-a
                span.for-emphasis
                a(href="")

            2.段落的写法
            p

            3.强调部分的写法，加入class="for-emphasis"
            em.for-emphasis

            4.专门显示代码的写法
            .for-code
                code
                    this.sunrise=data.retData.sunrise;//日出时间
                    br
                    this.sunset=data.retData.sunset;//日落时间

            5.专门显示图片的写法，需在标签里声明宽和高
            .for-img-show
                img(src='',style='')
                .img-msg
                    p

            6.文章的子标题的写法
            +subtitleuse("")

            7.文章文字p中如果有需要强调的
            p 一
                em.strongword 二
                |三

            8.警告和特别提醒部分
            +warnuse(leixing,b)

            9.表格的使用
            .for-table
                table(border="1")
                    caption 这里写表单的标题
                    colgroup
                        col(style="width: 20%;")
                        col(style="width: 80%;")
                    thead
                        +tableuse("","")
                    tbody
                        +tableuse("","")
                    tfoot
                        +tableuse("","")
            10.列表的使用
                dl
                    +dtdduse("","")

    +subtitleuse("居中")
    .for-table
        table(border="1")
            caption display:block元素的居中,需要定宽
            colgroup
                col(style="width: 40%;")
                col(style="width: 60%;")
            thead
                +tableuse("水平居中","属性设置")
            tbody
                +tableuse("position:fixed,position:absolute","left: 0; right: 0; margin:0 auto;")
                +tableuse("position:relative","margin: 0 auto;")
            thead
                +tableuse("垂直居中","属性设置")
            tbody
                +tableuse("position:fixed,position:absolute","top: 0; bottom: 0; margin: auto 0;")
                +tableuse("position:relative","margin: auto 0;")
